{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices", "group:allNonMajor"],
  "automerge": true,
  "platformAutomerge": true,
  "rangeStrategy": "bump",
  "timezone": "Asia/Tokyo",
  "minimumReleaseAge": "3 days",
  "packageRules": [
    {
      "matchDatasources": ["docker"],
      "pinDigests": false
    }
  ]
}
